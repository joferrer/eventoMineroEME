---
import MainSlice from "../components/slice/MainSlice.astro";
import Patrocinadores from "../components/slice/Patrocinadores.astro";
import Layout from "../layouts/Layout.astro";
import CarborBg from "../assets/images/carbon.png";
import "../styles/global.css";
import Ponentes from "../components/slice/Ponentes.astro";
import Inscripcion from "../components/slice/Inscripcion.astro";
import EventoInfo from "../components/slice/EventoInfo.astro";
import Footer from "../components/Footer.astro";
import AgendaInfo from "../components/slice/AgendaInfo.astro";
import Agenda from "../components/slice/Agenda.astro";

---

<Layout title="Evento Minero EME 2025">
	<div class="relative min-h-fit overflow-hidden">
		<div
			class="absolute w-full h-full bg-center bg-no-repeat bg-cover -z-10 bg-zoom"
			style={`background-image: url(${CarborBg.src});`}
		>
		</div>
		<MainSlice />
	</div>
	<EventoInfo	/>
	<AgendaInfo />
	<Agenda />
	<!-- <Ponentes /> -->
	<Patrocinadores />
	<Inscripcion />
	<Footer />
</Layout>

<style>
	@layer utilities {
		.bg-zoom {
			background-size: 400%;
		}
		@media (min-width: 720px) {
			.bg-zoom {
				background-size: 200%;
			}
		}
		@media (min-width: 896px) {
			.bg-zoom {
				background-size: 150%;
			}
		}
	}
</style>
