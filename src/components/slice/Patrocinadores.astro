  { light: camara, dark: camaraDark, alt: "Cámara de Comercio", link: 'https://www.cccucuta.org.co/' },
  { light: gaseDark , dark: gase, alt: "Gases del Oriente", link: 'https://www.gasesdeloriente.com.co/' },
