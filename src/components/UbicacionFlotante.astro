    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    z-index: 1000;
    border: none;
    box-shadow:
      0 8px 25px rgba(255, 107, 107, 0.5),
      0 0 0 0 rgba(255, 107, 107, 0.7);
  }

