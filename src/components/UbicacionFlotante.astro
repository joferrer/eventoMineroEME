    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .icon-pin {
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
    animation: bounce 2s ease-in-out infinite;
  }

  @keyframes bounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .pulse-ring,
  .pulse-ring-2 {
    position: absolute;
    border: 3px solid rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    width: 100%;
    height: 100%;
    animation: pulse 2s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
  }

  .pulse-ring-2 {
    animation-delay: 1s;
  }

  @keyframes pulse {
    0% {
      transform: scale(0.8);
      opacity: 1;
    }
    100% {
      transform: scale(1.5);
      opacity: 0;
    }
  }

  .floating-location-btn:hover {
    transform: translateY(-8px) scale(1.1) rotate(5deg);
