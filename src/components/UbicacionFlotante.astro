    border-color: rgba(102, 126, 234, 0.3);
  }

  .info-card:hover::before {
    opacity: 1;
  }

  .card-icon {
    font-size: 42px;
    line-height: 1;
    position: relative;
    z-index: 1;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3));
  }

  .card-content {
    position: relative;
    z-index: 1;
  }

  .card-content strong {
    color: #667eea;
    display: block;
    margin-bottom: 10px;
