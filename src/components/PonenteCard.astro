---
import { Image } from "astro:assets";

const { nombre, foto } = Astro.props;
---

<a href="">
    <div class="border p-2 rounded flex flex-col items-center h-52 card">
      
        <Image src={foto} alt={nombre} class={"object-cover w-32 h-32 z-10 rounded-full"} />
          <h3 class="z-10 mb-1 text-xl font-medium text-gray-900 dark:text-white">{nombre}</h3>
          <span class="text-sm text-gray-500 dark:text-gray-400">Visual Designer</span>
    </div>
</a>

<style>
    .card {
        position: relative;
        display: flex;
        place-content: center;
        place-items: center;
        overflow: hidden;
        border-radius: 20px;
    }
    :hover.card::before {
        content: "";
        position: absolute;
        width: 100px;
        background-image: linear-gradient(
            180deg,
            rgb(255 220 127),
            rgb(44 164 191)
        );
        height: 130%;
        animation: rotBGimg 3s linear infinite;
        transition: all 0.2s linear;
    }

    @keyframes rotBGimg {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    :hover.card::after {
        content: "";
        position: absolute;
        background: white;
        inset: 5px;
        border-radius: 15px;
    }
</style>
